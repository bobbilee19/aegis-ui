{{#paper-toolbar as |toolbar|}}
  {{#toolbar.tools}}
    <h2>AEGIS</h2>
    <span class="flex"></span>
    {{#paper-button mini=true aria-label="Add" noink=true raised=true primary=true onClick=(action "linkToNewSponsor")}}
      {{paper-icon "add"}}
    {{/paper-button}}
  {{/toolbar.tools}}
{{/paper-toolbar}}

{{#paper-content class="md-whiteframe-z1 list-demo"}}
  {{#paper-list}}
    {{#each sponsors as |sponsor|}}
      {{#paper-item class="md-3-line" }}
          <div class="md-list-item-text" {{action "linkToSponsor" sponsor}}>
              <h3>{{sponsor.name}}</h3>
              <h4>{{sponsor.location}}</h4>
              <p>
                {{sponsor.website}}
              </p>
          </div>
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
{{/paper-content}}
